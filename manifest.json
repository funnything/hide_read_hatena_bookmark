{
  "manifest_version": 1,
  "version": "1.0",
  "name": "Hide read hatena bookmark",
  "short_name": "Hide read hatebu",
  "author": "funnythinge",
  "description": "Hide read hatena bookmark",
  "homepage_url": "https://github.com/imkevinxu/mark-all-as-read",
  "icons": {
    "16": "icon/icon16.png",
    "32": "icon/icon32.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icon/icon19.png",
      "38": "icon/icon38.png"
    },
    "default_title": "Hide read hatena bookmark"
  },
  "permissions": ["history", "tabs", "<all_urls>"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["markallasread.js"]
  }]
}
